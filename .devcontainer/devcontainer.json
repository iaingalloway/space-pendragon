{
  "name": "space-pendragon-devcontainer",
  "customizations": {
    "vscode": {
      "extensions": ["svelte.svelte-vscode"],
      "settings": {
        "svelte.enable-ts-plugin": true,
        "chat.agent.enabled": true
      }
    }
  },
  "image": "ghcr.io/iaingalloway/devcontainers/javascript:1.4-node25.2.1",
  "remoteEnv": {
    "HOST_WORKSPACE_PATH": "${localWorkspaceFolder}"
  },
  "runArgs": ["--name", "space-pendragon-devcontainer", "--network=host"]
}
